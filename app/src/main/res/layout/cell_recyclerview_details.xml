<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <TextView
            android:id="@+id/cellTvTransactionType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Pagamento"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cellTvTypeDebit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            tools:text="Conta"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cellTvTransactionType" />

        <TextView
            android:id="@+id/cellTvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="18/01/2019"
            app:layout_constraintBaseline_toBaselineOf="@+id/cellTvTransactionType"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/cellTvValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="R$ 1.000,00"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/cellTvTypeDebit"
            app:layout_constraintEnd_toEndOf="parent" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>